<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent"
        tools:context=".ui.DocumentManager">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/noimage"
            android:id="@+id/imageViewIm"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/catpgoryEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewIm"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="BusinessName"
            android:id="@+id/businessNameEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/catpgoryEt"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/placeNameEt"
            android:hint="Place Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/businessNameEt"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="OwnerName"
            android:id="@+id/ownerNameEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/placeNameEt"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:hint="Phone Number"
            android:id="@+id/phoneNumberEt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ownerNameEt"/>
    <Button
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editFieldBtn"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberEt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp"
            android:background="@drawable/shape"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/deleteBtn"
            android:layout_marginEnd="109dp"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Delete"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteBtn"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberEt"
            android:layout_marginStart="109dp"
            android:background="@drawable/shape"
            app:layout_constraintStart_toEndOf="@+id/editFieldBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showMapBtn"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberEt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="33dp"
            app:layout_constraintStart_toEndOf="@+id/editFieldBtn"
            android:layout_marginStart="53dp"
            app:layout_constraintEnd_toStartOf="@+id/deleteBtn"
            android:layout_marginEnd="53dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
