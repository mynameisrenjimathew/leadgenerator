<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>



    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical">
        <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="5dp"
                android:layout_weight="4"
                tools:context=".ui.UploadActivity">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    tools:context=".ui.UploadActivity">

                <ImageView
                        android:id="@+id/imageViewIm"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/noimage"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/shape"/>
                <Spinner
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/catpgoryEt"/>


                <EditText
                        android:id="@+id/businessNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:nextFocusDown="@+id/placenameEditText"
                        android:backgroundTint="#11161A"
                        android:hint="Enter Business Name"
                        android:fontFamily="casual">

                </EditText>
                <EditText

                        android:id="@+id/placeNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#11161A"
                        android:singleLine="true"
                        android:nextFocusDown="@+id/ownerNameEditText"
                        android:hint="Enter Place Name"
                        android:fontFamily="casual"/>
                <EditText
                        android:id="@+id/ownerNameEt"
                        android:layout_width="match_parent"
                        android:nextFocusDown="@+id/ownerPhoneEditText"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#11161A"
                        android:hint="Enter Owner Name"
                        android:fontFamily="casual"/>
                <EditText
                        android:id="@+id/phoneNumberEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:backgroundTint="#11161A"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:hint="Enter Phone Number"
                        android:fontFamily="casual"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:orientation="horizontal">
                    <Button
                    android:text="Update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editFieldBtn"
                    android:background="@drawable/shape"
                    android:layout_marginLeft="100dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="24dp"/>
                    <Button
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deleteBtn"
                    android:background="@drawable/shape"
                    android:layout_marginTop="24dp"/>


                </LinearLayout>



            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</layout>
