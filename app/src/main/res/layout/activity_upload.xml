<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#161110"
        android:padding="5dp"
        android:layout_weight="10"
        tools:context=".ui.UploadActivity">

    <TextView
            android:text="Data Uploading"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/textView2"
            android:textColor="#E7DFDF"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_height="0dp"/>

    <Spinner
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/spinner"
            android:background="@drawable/shape"
            android:layout_weight="1"/>
    <EditText

            android:id="@+id/bussinessnameEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape"
            android:hint="Enter Bussiness Name"
            android:layout_weight="1"/>
    <EditText
            android:id="@+id/ownerNameEditText"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="0dp"
            android:background="@drawable/shape"
            android:hint="Enter Owner Name"
            android:layout_weight="1"/>
    <EditText
            android:id="@+id/ownerPhoneEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape"
            android:layout_marginTop="12dp"
            android:hint="Enter Phoen Number"
            android:layout_weight="1"/>

    <ImageView
               android:id="@+id/uploadImageView"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_marginTop="12dp"
               android:background="@drawable/shape"
               android:layout_weight="3"/>


    <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape"
            android:layout_marginTop="12dp"
            android:text="Upload Datas"
            android:layout_weight="1"/>


</LinearLayout>